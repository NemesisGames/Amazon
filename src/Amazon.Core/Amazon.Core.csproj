<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>BHG.Amazon.Core</AssemblyName>
    <Version>0.1.2</Version>
    <TargetFrameworks>netstandard2.0;netcoreapp3.1</TargetFrameworks>
    <LangVersion>8</LangVersion>
    <Nullable>enable</Nullable>

    <!-- Package Details-->
    <Authors>iamcarbon,BigHugeGames</Authors>
    <Copyright>© Jason Nelson</Copyright>
    <Description>Shared library for Amazon API implementations.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>aws;netstandard</PackageTags>
    <RepositoryUrl>https://github.com/NemesisGames/Amazon</RepositoryUrl>
    <PackageId>BHG.Amazon.Core</PackageId>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="System.Text.Json" Version="4.7.2" />
  </ItemGroup>

</Project>